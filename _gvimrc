" ------------------------------------------------------------------------------
" ~/.gvimrc
" ------------------------------------------------------------------------------

" メニューバーを非表示にする
" set guioptions-=m

" ツールバーを非表示にする
set guioptions-=T

" カラースキームの設定
colorscheme torte

" カーソル行を表示
set cursorline

" 縦幅 デフォルトは24
set lines=40

" 横幅 デフォルトは80
set columns=120

